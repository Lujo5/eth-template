{
  "name": "eth-template",
  "version": "1.0.0",
  "description": "Bootstrapped Ethereum smart contract development environment with truffle and ganache",
  "author": "Luka Matosevic",
  "license": "MIT",
  "main": "truffle-config.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Lujo5/eth-template.git"
  },
  "keywords": [
    "ethereum",
    "contract",
    "template",
    "truffle",
    "ganache"
  ],
  "scripts": {
    "compile": "truffle compile --all",
    "test": "truffle test --compile-all",
    "migrate": "truffle migrate --compile-all",
    "migrate-reset": "truffle migrate --reset --compile-all",
    "watch": "truffle watch",
    "ganache-run": "ganache-cli",
    "ganache-run-test": "npm-run-all -p -r 'ganache-run -- -q' test"
  },
  "dependencies": {
    "solc": "^0.8.5",
    "truffle": "^5.3.14"
  },
  "devDependencies": {
    "chai": "^4.3.4",
    "ganache-cli": "^6.12.2",
    "mocha": "^8.1.2",
    "npm-run-all": "^4.1.5"
  }
}
